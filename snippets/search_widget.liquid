<div class="search-popup top-0 left-0 right-0 bottom-0" custom-popup-modal="search-form">
  <a class="button-close" href="#" custom-popup-close="search-form">{% include "svg" with "icon_close" %}</a>

  <div class="search-inner absolute content-middle">
    <form action="/search" method="get" class="search_widget">
      <div class="inpt-group text-center">
        <input type="text" autocomplete="off" class="inpt inpt-underline inline-middle" name="q" value="" placeholder="{{ messages.t_search }}" data-search-field />
        <button type="submit" class="bttn-link inline-middle transition">{% include 'svg' with 'icon_search' %}</button>
      </div>
      <input type="hidden" name="lang" value="{{ language.locale }}">
      {% comment %}
        <div class="search_widget-result">
          <div data-search-result class="search_widget-result-inner"></div>
        </div>
      {% endcomment %}
    </form>
  </div>
</div>

<div class="popup-bg" custom-popup-bg="search-form"></div>
