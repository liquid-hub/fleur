{%- comment -%}Theme - Fleur{%- endcomment -%}
<!DOCTYPE html>
<html>

<head>
  {% include "head" %}
  {% capture meta_settings_value %}{"feedback_captcha_enabled": {{ settings.feedback_captcha_enabled | default: 'false' }} }{% endcapture %}
  <meta data-config="{{meta_settings_value|escape}}" name="theme-settings" content="">

  {% include "styles" %}
</head>

{% assign is_index = 'is-index-page' %}

{% unless template == 'index' %}
  {% assign is_index = 'not-index-page' %}
{% endunless %}

<body class="template-is-{{ template | replace: '.', '_' }} {{ is_index }}" data-multi-lang="{{ language.not_default? }}">
  {% include "header" %}

  {{ content_for_layout }}

  {% include "instagram" %}

  {% include "footer" %}
  {% include "cookie-banner" %}
  {% include_insales_scripts "common-js@v2" %}
  {% include "scripts" %}

  {% include "scroll_top" %}
  {% include "no_js_alert" %}
  {% include "microdata" %}

</body>
</html>
